# Base app
APP_ENV=prod
APP_NAME=Naver Apt Briefing API
APP_VERSION=0.1.0
APP_PORT=18080

# Domain/HTTPS (Caddy)
DOMAIN=api.example.com
ACME_EMAIL=admin@example.com

# Postgres (used by db service)
POSTGRES_DB=naver_apt_briefing
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me

# Database URL for app (must use service name "db")
DATABASE_URL=postgresql+psycopg://postgres:change-me@db:5432/naver_apt_briefing
REDIS_URL=redis://localhost:6379/0

AUTO_CREATE_TABLES=false

# Auth
AUTH_SECRET_KEY=replace-with-very-long-random-secret
AUTH_JWT_ALGORITHM=HS256
AUTH_JWT_ISSUER=naver-apt-briefing
AUTH_ACCESS_TOKEN_TTL_MINUTES=15
AUTH_REFRESH_TOKEN_TTL_DAYS=30
AUTH_EMAIL_VERIFICATION_REQUIRED=false
AUTH_EMAIL_VERIFICATION_TTL_MINUTES=1440
AUTH_EMAIL_VERIFICATION_BASE_URL=https://api.example.com
AUTH_REGISTER_INVITE_CODE=
AUTH_REGISTER_RATE_LIMIT_PER_WINDOW=20
AUTH_REGISTER_RATE_LIMIT_WINDOW_MINUTES=60

# Naver crawler
NAVER_LAND_BASE_URL=https://new.land.naver.com
NAVER_LAND_AUTHORIZATION=
NAVER_LAND_COOKIE=
CRAWLER_MAX_RETRY=1
CRAWLER_TIMEOUT_SECONDS=10
CRAWLER_REUSE_WINDOW_HOURS=12

# Email (SMTP)
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_SENDER_EMAIL=
SMTP_USE_TLS=true

# Telegram
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_API_BASE_URL=https://api.telegram.org

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Seoul
SCHEDULER_TIMES_CSV=09:00,18:00
SCHEDULER_COMPLEX_NOS_CSV=
SCHEDULER_POLL_SECONDS=20
